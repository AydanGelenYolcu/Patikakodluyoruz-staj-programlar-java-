import java.util.Scanner;

public class Main {
    public static void main(String[] args){
        int n1, n2, operation;
        Scanner in = new Scanner(System.in);
        System.out.print("please enter first number ");
        n1 = in.nextInt();
        System.out.print("please choose your operation: 1) + \n 2) - \n 3) * \n 4) /  ");
        operation = in.nextInt();
        System.out.print("please enter second number ");
        n2 = in.nextInt();

        switch (operation) {
            case 1 -> System.out.print("your result " + (n1 + n2));
            case 2 -> System.out.print("your result " + (n1 - n2));
            case 3 -> System.out.print("your result " + (n1 * n2));
            case 4 -> System.out.print("your result " + (n1 / n2));
            default -> System.out.print("please control your selection, you can only choose between 1 and 4");
        }
    }

}
